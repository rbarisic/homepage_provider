
<div class="form">
<h1 class="text-center">Members Area</h1>
<p class="text-center">Please <b>log in</b> to visit the Members Area.</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'pure-form'}) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'pure-input-1' %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'pure-input-1' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'pure-button pure-button-lead pure-input-1' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>