<% @splash = true %>
<div class="form">
<h1 class="text-center">Sign Up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'pure-form'}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'pure-input-1' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'pure-input-1' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'pure-input-1' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'pure-button pure-button-lead pure-input-1' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
