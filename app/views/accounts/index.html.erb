<h1>Listing accounts</h1>

<table class="pure-table">
  <thead>
  <tr>
    <th>
      User
    </th>
    <th>
      Nickname
    </th>
    <th>
      Link
    </th>
  </tr>
  </thead>
  <% @accounts.each do |account| %>
    <tr>
      <td>
        <%= account.user_id %>
      </td>
      <td>
        <%= account.nickname || 'none' %>
      </td>
      <td>
        <%= link_to 'Homepage', account_homepage_path(account.homepage_id) %>
      </td>
    </tr>
  <% end %>
</table>
<br>

<%= link_to 'New Account', new_account_path %>
